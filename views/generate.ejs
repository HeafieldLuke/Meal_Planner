      <%- include('./partials/selectDay', { day: 'Friday', recipes: recipes}) %>
      <%- include('./partials/selectDay', { day: 'Saturday', recipes: recipes}) %>
      <%- include('./partials/selectDay', { day: 'Sunday', recipes: recipes}) %>
      <input type="submit" class="submit">
    </form>
    
  </div>
</div>
